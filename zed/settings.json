// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run the `open default settings` command
// from the command palette or from `Zed` application menu.
{
  "git_panel": {
    "dock": "right"
  },
  "icon_theme": "Catppuccin Latte",
  "assistant": {
    "default_model": {
      "provider": "zed.dev",
      "model": "claude-3-5-sonnet-latest"
    },
    "version": "2"
  },
  "ssh_connections": [
    {
      "host": "rp5",
      "projects": [
        {
          "paths": ["~/check-temps.ts"]
        },
        {
          "paths": ["~/monitor"]
        },
        {
          "paths": ["~/monitor.ts"]
        }
      ]
    }
  ],
  "vim_mode": true,
  "use_autoclose": true,
  "project_panel": {
    "dock": "right",
    "folder_icons": true,
    "auto_fold_dirs": false,
    "indent_guides": {
      "show": "never"
    }
  },
  "ui_font_size": 19,
  "theme": "Vesper",
  "experimental.theme_overrides": {
    "border": "#202020"
  },
  "buffer_font_size": 16,
  "ui_font_family": "Geist",
  "buffer_font_family": "GeistMono Nerd Font",
  "terminal": {
    "font_family": "GeistMono Nerd Font",
    "font_size": 14,
    "line_height": "standard"
  },
  "buffer_font_features": {
    "liga": false
  },
  "preview_tabs": {
    "enabled": false
  },
  "tabs": {
    "git_status": true,
    "file_icons": true
  },
  "tab_bar": {
    "show_nav_history_buttons": false
  },
  "wrap_guides": [2, 120],
  "file_scan_exclusions": [
    "**/.git",
    "**/.svn",
    "**/.hg",
    "**/CVS",
    "**/.DS_Store",
    "**/Thumbs.db",
    "**/.classpath",
    "**/.settings",
    ".turbo",
    ".husky",
    ".vercel",
    "tsconfig.tsbuildinfo"
  ],
  "features": {
    "edit_prediction_provider": "zed",
    "copilot": false
  },
  "format_on_save": "on",
  "inlay_hints": {
    "enabled": false
  },
  "toolbar": {
    "breadcrumbs": true,
    "quick_actions": true
  },

  "lsp": {
    "deno": {
      "settings": {
        "deno": {
          "enable": true
        }
      }
    }
  },
  // "languages": {
  //   "TypeScript": {
  //     "language_servers": [
  //       "deno",
  //       "!typescript-language-server",
  //       "!vtsls",
  //       "!eslint"
  //     ],
  //     "formatter": "language_server"
  //   },
  //   "TSX": {
  //     "language_servers": [
  //       "deno",
  //       "!typescript-language-server",
  //       "!vtsls",
  //       "!eslint"
  //     ],
  //     "formatter": "language_server"
  //   }
  // },

  // vim
  "cursor_blink": true
}
