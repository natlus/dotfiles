{
  // vim mode
  "vim_mode": true,
  "cursor_blink": false,
  "vim": {
    "toggle_relative_line_numbers": true,
  },
  "vertical_scroll_margin": 8,
  "max_tabs": 6,

  // look and feel
  "theme": "Vesper",
  "icon_theme": "Catppuccin Latte",
  "ui_font_size": 18,
  "agent_ui_font_size": 18,
  "buffer_font_size": 16.0,
  "buffer_line_height": "comfortable",
  "ui_font_family": "Geist",
  "buffer_font_family": "GeistMono Nerd Font",
  "buffer_font_features": {
    "liga": false,
  },
  "terminal": {
    "font_family": "GeistMono Nerd Font",
    "font_size": 14,
    "line_height": "standard",
    "button": false,
  },
  "project_panel": {
    "dock": "right",
    "folder_icons": true,
    "auto_fold_dirs": false,
    "indent_guides": {
      "show": "never",
    },
  },
  "inlay_hints": {
    "enabled": false,
  },
  "title_bar": {
    "show_branch_icon": true,
  },
  "toolbar": {
    "breadcrumbs": true,
    "quick_actions": false,
  },
  "search": {
    "button": false,
  },
  "git_panel": {
    "dock": "right",
  },
  "tabs": {
    "git_status": true,
    "file_icons": true,
  },
  "tab_bar": {
    "show": true,
    "show_nav_history_buttons": false,
    "show_tab_bar_buttons": false,
  },
  "notification_panel": {
    "button": false,
  },
  "experimental.theme_overrides": {
    "border": "#262626",
    "editor.indent_guide_active": "#565656",
    "editor.active_wrap_guide": "#FFFFFF20",

    // transparent Zed
    "background.appearance": "blurred",
    "scrollbar.thumb.background": "#343434DF",
    "scrollbar.track.background": "#10101010",
    "editor.active_line.background": "#10101009",
    "search.match_background": "#FFFFFF30",
    // "ghost_element.background": "#10101010",
    // "ghost_element.hover": "#10101099",
    "ghost_element.selected": "#ffffff30",
    "background": "#101010D0",
    "editor.background": "#10101000",
    "editor.gutter.background": "#10101008",
    "title_bar.background": "#101010",
    "toolbar.background": "#10101010",
    "terminal.background": "#10101000",
    "status_bar.background": "#101010DF",
    "tab.active_background": "#D6D6D610",
    "tab.inactive_background": "#10101010",
    "tab_bar.background": "#10101008",
    "panel.background": "#10101000",
    "error.background": "#893232",
    "warning.background": "#45372b",
    "panel.overlay_background": "#101010ff",
  },

  // features
  "format_on_save": "on",
  "extend_comment_on_newline": false,
  "use_autoclose": true,
  "preview_tabs": {
    "enabled": true,
    "enable_preview_from_project_panel": true,
    "enable_preview_from_file_finder": true,
    "enable_preview_from_multibuffer": true,
    "enable_preview_multibuffer_from_code_navigation": true,
    "enable_preview_file_from_code_navigation": true,
    "enable_keep_preview_on_code_navigation": true,
  },
  "preferred_line_length": 120,
  "soft_wrap": "bounded",

  // ai
  "agent": {
    "dock": "left",
    "always_allow_tool_actions": true,
    "inline_assistant_model": {
      "provider": "copilot_chat",
      "model": "claude-opus-4.5",
    },
    "default_model": {
      "provider": "copilot_chat",
      "model": "gemini-3-pro-preview",
    },
  },
  "features": {
    "edit_prediction_provider": "zed",
  },
  "edit_predictions": {
    "mode": "eager",
    "copilot": {
      "proxy": null,
      "proxy_no_verify": null,
    },
    "enabled_in_text_threads": true,
  },

  // hide files
  "file_scan_exclusions": [
    "**/.git",
    "**/.svn",
    "**/.hg",
    "**/CVS",
    "**/.DS_Store",
    "**/Thumbs.db",
    "**/.classpath",
    "**/.settings",
    ".turbo",
    ".husky",
    ".vercel",
    "tsconfig.tsbuildinfo",
  ],

  "diagnostics": {
    "inline": {
      "enabled": true,
      "max_severity": "error",
    },
  },

  // lsp
  "lsp": {
    "biome": {
      "settings": {
        "require_config_file": true,
      },
    },
    "deno": {
      "settings": {
        "deno": {
          "enable": true,
        },
      },
    },
    "tailwindcss-language-server": {
      "settings": {
        "classFunctions": ["cva", "cx", "cn"],
        "experimental": {
          "classRegex": ["[cls|className]\\s\\:\\=\\s\"([^\"]*)"],
        },
      },
    },
  },
  "languages": {
    "TypeScript": {
      "inlay_hints": {
        "enabled": false,
        "show_type_hints": false,
        "show_parameter_hints": true,
        "show_other_hints": true,
        "show_background": true,
        "edit_debounce_ms": 700,
        "scroll_debounce_ms": 50,
        "toggle_on_modifiers_press": null,
      },
      // "language_servers": ["!tsgo", "!biome"]
    },
  },
}
